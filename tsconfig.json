{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "ES2021"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@dtos/*": ["libs/dtos/*"],
      "@types/*": ["libs/types/*"],
      "@firebase/*": ["libs/firebase/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
