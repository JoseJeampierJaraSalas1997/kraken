{
  "name": "restaurant-system",
  "version": "1.0.0",
  "description": "Sistema Kraken para la gestión integral de restaurantes: comandas, caja, inventario, sedes y más.",
  "author": "Jose Jara",
  "license": "Commercial - Jose Jara © 2025",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/JoseJeampierJaraSalas1997/kraken.git"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd apps/backend && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:web\"",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:web": "cd apps/web && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "firebase-admin": "^13.4.0"
  }
}
